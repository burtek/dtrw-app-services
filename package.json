{
  "name": "dtrw-app-services",
  "version": "1.13.2",
  "repository": "git@github.com:burtek/dtrw-app-services.git",
  "author": "Bartosz <burtekdotryw@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "standard-version": "^9.5.0",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "dev": "concurrently -c bgRed,bgBlue --names ' backend,frontend' --handle-input 'yarn workspace backend start:dev' 'yarn workspace frontend start:dev'",
    "build": "concurrently -c bgRed,bgBlue --names ' backend,frontend' 'yarn workspace backend build' 'yarn workspace frontend build'",
    "lint": "concurrently -c bgRed,bgBlue --names ' backend,frontend' 'yarn workspace backend lint' 'yarn workspace frontend lint'",
    "test": "NODE_ENV=test vitest",
    "test:backend": "NODE_ENV=test vitest --project=backend",
    "test:frontend": "NODE_ENV=test vitest --project=frontend",
    "prepare": "husky",
    "release": "standard-version",
    "generate": "yarn workspace backend generate",
    "migrate": "yarn workspace backend migrate",
    "check-db": "yarn workspace backend check"
  },
  "standard-version": {
    "bumpFiles": [
      "package.json",
      "packages/backend/package.json",
      "packages/frontend/package.json"
    ]
  }
}
